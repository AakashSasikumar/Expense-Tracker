<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#96ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="#ID"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/transactionIDTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transactionIDTextView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:text="Transaction Type"
        android:id="@+id/transactionTypeTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transactionIDTextView"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:text="Amount"
        android:id="@+id/transactionAmountTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transactionTypeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:text="Category"
        android:id="@+id/transactionCategoryTextView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transactionCategoryTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"
        android:text="01/02/2018"
        android:id="@+id/transactionDateTextView"/>

    <android.support.design.widget.TextInputLayout
        android:theme="@style/EditTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/transactionDateTextView"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:id="@+id/descriptionViewInputLayout">
        <EditText
            android:id="@+id/transactionDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:hint="Enter a description"
            android:text="Description"
            android:layout_height="wrap_content"
            android:enabled="false"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/signup_button_background"
        android:text="Close"
        android:id="@+id/closeButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/login_button_background"
        android:text="Edit"
        android:id="@+id/editButton"/>

</RelativeLayout>
